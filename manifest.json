{
  "manifest_version": 2,

  "name": "Drawn to Distraction?",
  "description": "This extension breaks down bad habits.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",

    "default_title": "Drawn to Distraction?"
  },

  "permissions": [
    "activeTab", 
    "tabs",
    "storage",
    "webRequest",
    "webNavigation",
    "<all_urls>"
  ]
  
}